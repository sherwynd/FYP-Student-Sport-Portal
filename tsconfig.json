{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noImplicitReturns": true,
    // "noUnusedParameters": true,
    // "noUnusedLocals": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@actions/*": [
        "./src/actions/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@databases/*": [
        "./src/databases/*"
      ],
      "@libs/*": [
        "./src/libs/*"
      ],
      "@schemas/*": [
        "./src/schemas/*"
      ],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@api/*": [
        "./src/app/api/*"
      ],
      "@features/*": [
        "./src/features/*"
      ],
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
